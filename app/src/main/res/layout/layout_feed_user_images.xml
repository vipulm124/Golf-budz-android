<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    style="@style/AppTheme.Linearmain"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/feedImage1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/space_x0"
        android:scaleType="centerCrop"
        android:src="@drawable/bg"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/feedSeconLayout"
        style="@style/AppTheme.Linearmain"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/feedSImage1"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/space_x0"
            android:layout_weight="1"
            android:paddingRight="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/feedSImage2"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/space_x0"
            android:layout_weight="1"
            android:paddingLeft="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/feedThirdLayout"
        style="@style/AppTheme.Linearmain"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            style="@style/AppTheme.Linearmain"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/feedTImage1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/space_x0"
                android:layout_weight="1"
                android:paddingRight="1dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/feedTImage2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/space_x0"
                android:layout_weight="1"
                android:paddingLeft="1dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg"
                android:visibility="visible" />
        </LinearLayout>

        <ImageView
            android:id="@+id/feedTImage3"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="@dimen/space_x0"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/bg"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/feedFourthLayout"
        style="@style/AppTheme.Linearmain"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            style="@style/AppTheme.Linearmain"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/feedFImage1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/space_x0"
                android:layout_weight="1"
                android:paddingRight="1dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/feedFImage2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/space_x0"
                android:layout_weight="1"
                android:paddingLeft="1dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg"
                android:visibility="visible" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="#99000000">

            <ImageView
                android:id="@+id/feedFImage3"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="@dimen/space_x0"
                android:layout_weight="1"
                android:alpha="0.4"
                android:scaleType="centerCrop"
                android:src="@drawable/bg"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerInParent="true"
                android:gravity="center"

                android:text="+6"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>