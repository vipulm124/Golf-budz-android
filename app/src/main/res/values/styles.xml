<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="category">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">@dimen/font_x2</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>

        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:windowBackground">@drawable/bg_alert_dialog</item>
    </style>

    <style name="AppTheme.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingLeft">@dimen/space_x1</item>
        <item name="android:paddingRight">@dimen/space_x1</item>
        <item name="android:paddingTop">@dimen/space_x1</item>
       <item name="android:layout_marginLeft">@dimen/space_x2</item>
        <item name="android:layout_marginRight">@dimen/space_x2</item>
        <item name="android:paddingBottom">@dimen/space_x1</item>
    </style>
    <style name="AppTheme.ImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/space_x1</item>
        <item name="android:paddingRight">@dimen/space_x1</item>
        <item name="android:paddingTop">@dimen/space_x1</item>

        <item name="android:paddingBottom">@dimen/space_x1</item>
    </style>
    <style name="AppTheme.Button.Wrap">
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="AppTheme.TextView.Wrap">
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="AppTheme.ImageView.Wrap">
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="AppTheme.TextView.CardView">
        <item name="android:textSize">@dimen/font_x2</item>
    </style>

    <style name="AppTheme.TextView.CardView.Title">
        <item name="android:textSize">@dimen/font_x3</item>
    </style>

    <style name="normaltext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">@dimen/font_x2</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.EditText" parent="AppTheme.TextView">
        <item name="android:layout_height">@dimen/box_height</item>
        <item name="android:drawablePadding">@dimen/space_x2</item>
        <item name="android:background">@drawable/custom_circle</item>
        <item name="android:textColorHint">@color/hintcolor</item>
        <item name="android:layout_marginTop">@dimen/space_x2</item>
        <item name="android:paddingLeft">@dimen/space_x2</item>

    </style>

    <style name="AppTheme.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">@dimen/space_x2</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="AppTheme.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/view_divider_color</item>
    </style>
    <style name="AppTheme.Divider.CardView">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="AppTheme.LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_horizontal_margin</item>
        <item name="android:background">@color/colorGrayTrans</item>
    </style>
    <style name="AppTheme.Relativlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_horizontal_margin</item>
        <item name="android:background">@color/colorGrayTrans</item>
    </style>
    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/yellow</item>
        <item name="titleTextColor">@color/yellow</item>
    </style>
    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>

        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
    </style>
    <style name="SpinnerTheme"  parent="AppTheme.TextView">
        <item name="android:layout_height">@dimen/box_height</item>
        <item name="android:drawablePadding">@dimen/space_x2</item>
        <item name="android:background">@drawable/custom_circle</item>
        <item name="android:textColorHint">@color/hintcolor</item>
        <item name="android:layout_marginTop">@dimen/space_x2</item>
        <item name="android:paddingLeft">@dimen/space_x2</item>
        <item name="android:layout_width">match_parent</item>

    </style>
    <style name="AppTheme.Linearmain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--Add boxing style-->
    <style name="Boxing.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/boxing_colorPrimary</item>
        <item name="colorPrimaryDark">@color/boxing_colorPrimaryDark</item>
        <item name="colorAccent">@color/boxing_colorAccent</item>
    </style>

    <!-- BoxingActivity Theme-->
    <style name="Boxing.AppTheme.NoActionBar" parent="Boxing.AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="Boxing.PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/boxing_fade_in</item>
        <item name="android:windowExitAnimation">@anim/boxing_fade_out</item>
    </style>

    <style name="Boxing.ToolbarTheme" parent="Boxing.AppTheme.NoActionBar" >
        <item name="titleTextColor">@color/boxing_white</item>
        <item name="android:textColorSecondary">@color/boxing_white</item>
        <item name="android:textColor">@color/boxing_white</item>
        <item name="android:background">@color/boxing_colorPrimaryDark</item>
    </style>

    <!-- TextAppearance -->
    <style name="Boxing.TextAppearance.App.Medium" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/boxing_text_size_medium</item>
    </style>

</resources>
